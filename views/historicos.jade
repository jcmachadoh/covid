extends main
    
block content
  div.delete#page-wrapper(style="min-height: 466px;")
    div.container-fluid(style="margin-top: 50px; margin-bottom: 50px;")
      div.row
        div.col-lg-12
          div.panel.panel-default
            div.panel-heading 
              h3 Historico de casos
            div.panel-body
              div.table-responsive
                table.table.table-striped.table-bordered.table-hover(id="dataTables" )
                  thead.thead-dark
                    tr
                      th(scope="col") #
                      th(scope="col") Nombre y Apellidos
                      th(scope="col") Carnet 
                      th(scope="col") Edad 
                      th(scope="col") Sexo
                      th(scope="col") Categoria 
                      th(scope="col") Unidad
                      th(scope="col") Provincia 
                      th(scope="col") Municipio
                      th(scope="col") Direccion
                      th(scope="col") F. Ingreso
                      th(scope="col") F. Alta
                  tbody
                    - var contador = 1
                    each historico in historicos
                      tr
                        th(scope="row")
                          p= contador++
                          td 
                            p= historico.nombre
                          td 
                            p= historico.ci
                          td 
                            p= historico.edad
                          td 
                            p= historico.sexo
                          td 
                            p= historico.categoria
                          td 
                            p= historico.unidad
                          td 
                            p= historico.provincia 
                          td 
                            p= historico.municipio
                          td 
                            p= historico.direccion
                          td 
                            p= historico.fechaingreso
                          td 
                            p= historico.fechaalta
       
      