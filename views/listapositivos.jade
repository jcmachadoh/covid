extends main
    
block content
  div.delete#page-wrapper(style="min-height: 466px;")
    div.container-fluid(style="margin-top: 50px; margin-bottom: 50px;")
      div.row
        div.col-lg-12
          div.panel.panel-default
            div.panel-heading
              h3 Lista de casos positivos 
            div.panel-body
              div.table-responsive
                table.table.table-striped.table-bordered.table-hover(id="dataTables" )
                  thead.thead-dark
                    tr
                      th(scope="col") #
                      th(scope="col") Nombre y Apellidos
                      th(scope="col") Edad 
                      th(scope="col") Sexo
                      th(scope="col") Categoria
                      th(scope="col") Unidad
                      th(scope="col") Provincia 
                      th(scope="col") Ingreso
                      th(scope="col")
                      th(scope="col")
                      th(scope="col")
                      th(scope="col")
                      th(scope="col")
                  tbody
                    - var contador = 1
                    each positivo in positivos
                      tr
                        th(scope="row")
                          p= contador++
                          td 
                            p= positivo.nombre
                          td 
                            p= positivo.edad
                          td 
                            p= positivo.sexo
                          td 
                            p= positivo.categoria 
                          td 
                            p= positivo.unidad
                          td 
                            p= positivo.provincia 
                          td 
                            p= positivo.fechaingreso
                          td
                            div.float-right
                              a.alert-link(href='/informacion/#{positivo.id}')
                                button.btn.btn-primary(type='button') ver
                          td
                            div.float-right
                              a.alert-link(href='/actualizarpositivo/#{positivo.id}')
                                button.btn.btn-info(type='button') editar
                          td
                            div.float-right
                              a.alert-link(href='/eliminarpositivo/#{positivo.id}')
                                button.btn.btn-warning(type='button') borrar
                          td
                            div.float-right
                              a.alert-link(href='/altamedica/#{positivo.id}')
                                button.btn.btn-success(type='button') alta 
                          td
                            div.float-right
                              a.alert-link(href='/fallecido/#{positivo.id}')
                                button.btn.btn-danger(type='button') fallecido

         
                